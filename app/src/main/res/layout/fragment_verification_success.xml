<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:paddingBottom="16dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical"
    tools:context=".Fragments.VerificationSuccessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Welcome to Truebil"
            android:fontFamily="sans-serif-medium"
            android:textColor="#444A59" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="You are just 1 step away"
            android:textColor="#444A59" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_tick_neutral"
                    android:tint="@android:color/white"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/background_green_rounded_white_stroke"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="48dp"
                    android:background="#00B289"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration with OTP verification"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:textColor="#444A59"
                android:textSize="20sp"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:background="@drawable/background_circle_white_stroke_green"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="80dp"
                    android:background="#D8DEEB"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Verification &amp; RSD Payment"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#444A59"
                    android:textSize="20sp"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You will get a call back soon"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#444A59"
                    android:textSize="17sp"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:background="@drawable/background_circle_gray_stroke_white"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Activation"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#7D8AA1"
                android:textSize="20sp"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_car_dealer"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#444A59"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/fragment_verification_success_webview_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="@string/truebil_weblink_button"
            android:background="@drawable/background_button_purple"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8DEEB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:text="NEED HELP? CALL TRUEBIL"
            android:textColor="#444A59"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="4dp"
                    android:text="Truebil Care"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#444A59" />

                <TextView
                    android:id="@+id/fragment_verification_success_sales_person_mobile_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="4dp"
                    android:text="02262459799"
                    android:textColor="#5C6AC4"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/fragment_verification_success_call_sales_person_image_button"
                android:src="@drawable/phone_purple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#D8DEEB"/>

    </LinearLayout>

</LinearLayout>

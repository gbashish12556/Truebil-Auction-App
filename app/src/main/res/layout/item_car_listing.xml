                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#444A59"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="2012"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#444A59"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=" "
                android:fontFamily="sans-serif-medium" />

            <TextView

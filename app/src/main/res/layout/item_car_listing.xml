<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_car_listing_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp"
        android:paddingEnd="18dp"
        android:paddingRight="18dp"
        android:clipToPadding="false" />

    <ImageView
        android:id="@+id/item_car_listing_auction_closed_image_view"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:visibility="gone"
        android:src="@drawable/auction_closed"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/item_car_listing_bidding_status_text_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/item_car_listing_recycler_view"
        android:background="@drawable/background_orange"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="Canceller by seller"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:id="@+id/item_car_listing_car_details_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_below="@id/item_car_listing_recycler_view">

        <LinearLayout

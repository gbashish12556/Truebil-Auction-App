            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#7D8AA1"
                    android:textAllCaps="true"
                    android:text="Time Remaining"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/item_car_listing_time_remaining_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#444A59"
                    android:text="00:00:00s"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#7D8AA1"
                    android:text="Highest Bid"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/item_car_listing_highest_bid_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1,98,000"
                    android:textSize="17sp"
                    android:lineSpacingExtra="1.5dp"
                    android:textColor="#444A59"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#7D8AA1"
                    android:text="My Bid"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/item_car_listing_my_bid_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹2,00,000"
                    android:textSize="17sp"
                    android:lineSpacingExtra="1.5dp"
                    android:textColor="#444A59"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>


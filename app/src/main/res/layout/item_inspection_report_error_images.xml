<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_inspection_report_error_images_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_inspection_report_1_error_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/item_inspection_report_2_error_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp">

        <ImageView
            android:id="@+id/item_inspection_report_3_error_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        
        <TextView
            android:id="@+id/item_inspection_report_extra_count_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
    
</LinearLayout>

